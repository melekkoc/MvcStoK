@using Stok.Models.Entity
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
<p>
    Aranacak Müşteri Adı: @Html.TextBox("p")
    <input type="submit" value="Ara" />
</p>
    
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<table class="table table-bordered">
    <tr>
        <th>
            MUSTERİ ID
        </th>
        <th>
            MUSTERİ ADI

        </th>
        <th>
            MUSTERİ SOYADI
        </th>
        
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    @i.MusterId
                </td>
                <td>
                    @i.MusteriAd
                </td>
                <td>
                    @i.MusteriSoyad
                </td>
                <td>@Html.ActionLink("SİL", "Sil", new { id = i.MusterId }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" }) </td>
                <td><a href="/Musteri/MusteriGetir/@i.MusterId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
            }
    </tbody>
</table>
<a href="/Musteri/Ekle/" class="btn btn-primary">YENİ EKLE</a>

