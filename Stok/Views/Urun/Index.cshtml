@using Stok.Models.Entity
@model List<tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>
                URUN ID
            </th>
            <th>
                URUN ADI
            </th>
            <th>
                KATEGORİ
            </th>
            <th>
                FİYAT
            </th>
            <th>
                MARKA
            </th>
            <th>
                STOK
            </th>
            <th>
                SİL
            </th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>
                    @urun.UrunId
                </td>
                <td>
                    @urun.UrunAdı
                </td>
                <td>
                    @urun.tbl_Kategori.kategoriAd
                </td>
                <td>
                    @urun.Fiyat
                </td>
                <td>
                    @urun.Marka
                </td>
                <td>
                    @urun.Stok
                </td>
                <td><a href="/Urun/Sil/@urun.UrunId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urun/UrunGetir/@urun.UrunId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/Ekle/" class="btn btn-primary">YENİ EKLE </a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs/jszip-2.5.0/dt-1.10.18/b-1.5.6/b-html5-1.5.6/fh-3.1.4/datatables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>
