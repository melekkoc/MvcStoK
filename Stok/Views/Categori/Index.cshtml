@using Stok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tbl_Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ADI </th>
        <th>
            KATEGORİ ID
        </th>
        <th>
            SİL
        </th>
        <th>
            GÜNCELLE
        </th>
    </tr>

    <tbody>
       @foreach( var ktgr in Model)
       {
           <tr>
               <td>
                   @ktgr.kategoriAd
               </td>
               <td>
                   @ktgr.kategoriId
               </td>
               <td><a href="/Categori/Sil/@ktgr.kategoriId" class="btn btn-danger">SİL</a></td>
               <td><a href="/Categori/KategoriGetir/@ktgr.kategoriId" class="btn btn-success">GÜNCELLE</a></td>
           </tr>
       }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))

<a href="/Categori/Ekle/" class="btn btn-primary">YENİ EKLE</a>

